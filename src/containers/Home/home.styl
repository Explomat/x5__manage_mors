.home {
    .home__body {
        .home__link {
            color: #077fcc;
            text-decoration: none;
            display: inline-block;
            vertical-align: middle;
            font-weight: 700;

            &--active {
                text-decoration: underline;
            }
        }
        .home__menu {
            padding-left: 0;
            margin-top: 36px;
            margin-bottom: 16px;

            .home__menu-item {
                display: inline-block;
                margin-right: 24px;
            }
        }
    }
}
