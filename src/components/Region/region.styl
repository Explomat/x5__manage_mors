.region {
	// padding: 15px;
	// margin-bottom: 8px;
	// background-color: lighten(#ff8100, 90%);

	padding: 20px 15px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);
	margin-bottom: 8px;
	background-color: #fff;



	.region__href{
		display: block;
		text-decoration: none;
    	color: inherit;
		position: relative;

		.region__title {
			font-size: 1.3em;
			padding-right: 50px;
			line-height: 20px;
		}

		.region__mors {
			position: relative;
			margin-top: 20px;
			font-size: 13px;

			.region__mor-name{
				color: #999;
				&--without-sub {
					color: inherit;
				}
			}

			.region__sub-mor{
				.region__icon{
					background-image: url("../../../images/arrow-right.png");
			        background-position: center center;
			        background-repeat: no-repeat;
			        background-size: 100%;
			        display: inline-block;
			        width: 32px;
			        height: 11px;
				}
				.region__sub-mor-info{
					display: inline-block;
					position: absolute;
					top: -50%;

					.region__sub-mor-name{
						display: inline-block;
						border-bottom: 1px solid #ccc;
						padding-bottom: 1px;
					}
					.region__sub-mor-alternate-date{
						display: block;
						font-size: 11px;
						padding-top: 1px;
						position: relative;
    					left: 15px;
					}
				}
			}
		}
		.region__icon-go{
			position: absolute;
			right: 0;
			top: 50%;
			transform: translateY(-50%);
			font-size: 2em;
			color: lighten(#ff8100, 30%);
		}
	}
}
