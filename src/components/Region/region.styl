@import 'media/media*'

.region {
	// padding: 15px;
	// margin-bottom: 8px;
	// background-color: lighten(#ff8100, 90%);

	padding: 15px 0 15px 15px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
    margin-bottom: 8px;
    background-color: #fff;

	.region__href{
		display: block;
		text-decoration: none;
    	color: inherit;
		position: relative;

		.region__title {
			font-size: 1.2em;
			line-height: 20px;
			background-color: #f1f9ff;
			padding: 8px;
			margin-right: 40px;
		}

		.region__mors {
			position: relative;
			margin-top: 16px;
			font-size: 13px;

			.region__mor-name{
				padding-right: 0;
				display: inline-block;
				word-break: break-word;
				vertical-align: top;

				&--is-sub-mor {
					color: #999;
					width: 30%;
				}
			}

			.region__icon{
				background-position: center center;
		        background-repeat: no-repeat;
		        background-size: 100%;
		        display: inline-block;

				background-image: url("../../../images/right-arrow-blue32.png");
				width: 32px;
				height: 11px;
				margin-right: 8px;
				margin-left: 8px;
				position: absolute;
    			top: 0;
			}
			.region__sub-mor-info{
				display: inline-block;
				padding-right: 40px;
				position: relative;
				word-break: break-word;
				width: 60%;
				margin-left: 50px;
				vertical-align: top;

				.region__sub-mor-name{
					display: inline-block;
					border-bottom: 1px solid #ccc;
					padding-bottom: 1px;
				}
				.region__sub-mor-alternate-date{
					display: block;
					font-size: 11px;
					padding-top: 1px;
					position: relative;
					left: 15px;
				}
			}
		}
		.region__icon-go{
			position: absolute;
			right: 0;
			top: 50%;
			transform: translateY(-50%);
			font-size: 2em;
			color: lighten(#ff8100, 30%);
		}
	}
}
