.text-overflow-box {
	height: calc(1em * 1);
	overflow: hidden;
	position: relative;

	&--2 {
		height: calc(1em * 2);
	}

	&--3 {
		height: calc(1em * 3);
	}

	&--4 {
		height: calc(1em * 4);
	}

	&--5 {
		height: calc(1em * 5);
	}

	&--6 {
		height: calc(1em * 6);
	}

	.text-overflow-box__text{
		width: 97%;
		font-size: 1em;
		line-height: 1em;
		padding: 0;
		margin: 0;
	}

	.text-overflow-box__dots{
		position: absolute;
	    display: none;
	    bottom: -1px;
	    right: 0;
	    font-size: inherit;
	    padding: inherit;

		&--show{
			display: inline-block;
		}
	}
}
