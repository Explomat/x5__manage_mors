.header {
    position: relative;
    padding: 0 15px;
    line-height: 60px;
    color: lighten(#ff8100, 30%);
    min-height: 40px;
    padding-right: 20px;
    padding-left: 20px;
    background-color: #fafafa;
    background-image: linear-gradient(180deg,#fff,#f2f2f2);
    background-repeat: repeat-x;
    border: 1px solid #d4d4d4;
    box-shadow: 0 1px 4px rgba(0,0,0,.065);
}
